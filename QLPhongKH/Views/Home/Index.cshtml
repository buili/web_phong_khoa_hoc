<style>
    .container-fluid.px-0.py-5 {
        max-width: 90%;
        margin: 0 auto;
        /* Để căn giữa nếu phần tử không chiếm toàn bộ chiều rộng */
    }

    .noidung {
        max-width: 100%;
    }
    .noidung img {
            max-width: 100%;
            width: 290px;
            height: 200px;
            margin: 10px 0;
            border: 2px solid rgb(0, 0, 0);
     }
     .noidung p {
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            /* Số dòng hiển thị */
            -webkit-box-orient: vertical;
      
     }
    .tieude {
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        /* Số dòng hiển thị */
        -webkit-box-orient: vertical;
    }
    .section-title .boduoi::before {
        content: none;
    }
    .anhbe {
        width: 80px;
        height: 80px;
    }
    .mb4 {
        padding: 10px;
        border: 2px solid #333;
    }
</style>
@section header {
    <div class="jumbotron jumbotron-fluid position-relative overlay-bottom" style="margin-bottom: 90px;">
        <div class="container text-center my-5 py-5">

            <h1 class="text-white mt-4 mb-4">Home</h1>
            <div class="mx-auto mb-5" style="width: 100%; max-width: 600px;">
                <form method="get" action="~/TimKiem/Index">
                    <div class="input-group">
                        <input type="text" name="timkiem" value="@ViewBag.timkiem" class="form-control border-light" style="padding: 30px 25px;" placeholder="Keyword" required>
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-secondary px-4 px-lg-5">Tìm kiếm</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
